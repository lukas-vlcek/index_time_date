{
  "template": "*",
  "mappings": {
    "test": {
      "dynamic_templates": [
        {
          "dates": {
            "match_mapping_type": "date",
            "mapping": { "store": true }
          } 
        }
      ],
      "_source": {
        "enabled": false
      },
      "properties": {
        "date":  { "type": "string", "store": true, "index": "not_analyzed" },
        "date2": { "type": "date", "store": true, "format": "yyyy-MM-dd'T'HH:mm:ss.SSSSSSZ||yyyy-MM-dd'T'HH:mm:ssZ||dateOptionalTime" },
        "date3": { "type": "date", "store": true, "format": "yyyy-MM-dd'T'HH:mm:ss.SSSSZ||dateOptionalTime" }
      }
    }
  }
}
